{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node"
  },
  "include": [
    "./*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}